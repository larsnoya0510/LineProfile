<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity_DisplayName" android:background="@android:color/background_light">
    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar_this">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textSize="20sp" android:textColor="@android:color/background_light"
                tools:layout_editor_absoluteY="15dp" tools:layout_editor_absoluteX="16dp"/>
    </android.support.v7.widget.Toolbar>
    <TextView
            android:text="0"
            android:layout_width="80dp"
            android:layout_height="21dp"
            android:id="@+id/tv_CountWords"
            android:textColor="@android:color/black" android:gravity="center" android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="40dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_this"/>
    <EditText
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_InputName" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:maxLength="20"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/toolbar_this"
            android:textColor="@android:color/black"/>
    <Button
            android:text="@string/save"
            android:layout_width="257dp"
            android:layout_height="47dp"
            android:id="@+id/Btn_Save"
            android:background="@color/colorPrimaryDark" app:layout_constraintTop_toBottomOf="@+id/et_InputName"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/et_InputName"
            app:layout_constraintEnd_toEndOf="@+id/et_InputName"/>
</android.support.constraint.ConstraintLayout>